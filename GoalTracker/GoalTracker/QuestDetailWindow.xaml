<Window x:Class="GoalTracker.QuestDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoalTracker"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="QuestDetailWindow" Height="450" Width="450">
    <Grid>

        <Label x:Name="QuestTitle" Width="auto" Height="auto" FontSize="20" Margin="0,0,295,374">Quest Title</Label>

        <Label x:Name="QuestDesc" Background="LightGray" Margin="21,65,64,138">Desc</Label>

        <Button x:Name="RemoveQuestButton" VerticalAlignment="Top" Height="45" Click="RemoveQuestButton_Click"  Background="LightGray" Foreground="Red" Margin="152,333,152,0">Remove Quest</Button>

    </Grid>
</Window>
